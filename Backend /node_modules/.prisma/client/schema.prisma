generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  usuario          String   @unique
  nombre           String
  nacionalidad     String
  idiomas          String[]
  paises_visitados String[]
  mail             String   @unique
  Viaje            Viaje[]
}

model Pais {
  id         Int      @id @default(autoincrement())
  nombre     String
  capital    String
  idiomas    String[]
  moneda     String
  continente String
  Viaje      Viaje[]
}

model Viaje {
  id           Int      @id @default(autoincrement())
  paisId       Int
  usuarioId    Int
  fecha_inicio DateTime
  fecha_fin    DateTime
  ciudades     String[]
  presupuesto  Decimal  @default(0)
  calificacion Int      @default(0)
  pais         Pais     @relation(fields: [paisId], references: [id])
  usuario      User     @relation(fields: [usuarioId], references: [id])
}
