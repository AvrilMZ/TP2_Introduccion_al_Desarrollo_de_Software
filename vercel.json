{
    "version": 2,
    "builds": [
        {
            "src": "Backend/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "Frontend/**/*",
            "use": "@vercel/static"
        }
    ],
    "env": {
        "DATABASE_URL": "DATABASE_URL",
        "DIRECT_URL": "DIRECT_URL"
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/Frontend/html/$1"
        }
    ]
}