{
    "version": 2,
    "builds": [
        {
            "src": "Backend/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "Frontend/**/*",
            "use": "@vercel/static"
        }
    ],
    "env": {
        "DATABASE_URL": "DATABASE_URL",
        "DIRECT_URL": "DIRECT_URL"
    },
    "routes": [
        {
            "src": "/css/(.*)",
            "dest": "/Frontend/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "/Frontend/js/$1"
        },
        {
            "src": "/img/(.*)",
            "dest": "/Frontend/img/$1"
        },
        {
            "src": "/html/(.*)",
            "dest": "/Frontend/html/$1"
        },
        {
            "src": "/",
            "dest": "/Frontend/html/index.html"
        }
    ]
}
